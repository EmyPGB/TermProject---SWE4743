@model TermProject.Pages.ViewTravelersModel

<h2>Current Travelers</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveler[0].MobilePhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Traveler) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-page="AddTravelers">Add More Travelers</a> 
